{
  "name": "monorel",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "pnpm format:check && tsc -p .",
    "format:check": "prettier --check --config ./.prettierrc.json --ignore-path ./.prettierignore .",
    "format": "prettier --write --config ./.prettierrc.json --ignore-path ./.prettierignore .",
    "monorel": "./bin/monorel",
    "release:publish": "pnpm monorel --npm-tag latest --git-tag 'release-v{version}' --push-tags",
    "canary:publish": "pnpm monorel --version '0.4.0-alpha.{rev}.{time}' --npm-tag canary --git-tag 'canary-v{version}' --push-tag --publish",
    "ci": "pnpm clean && pnpm build && pnpm canary:publish",
    "prepare": "husky install",
    "precommit": "pnpm format:check"
  },
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "monorel": "./bin/monorel"
  },
  "keywpords": [
    "monorepo",
    "publish",
    "release"
  ],
  "author": "Vladimir Klimontovich <vladimir@jitsu.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.0.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "husky": "^8.0.0"
  },
  "dependencies": {
    "minimist": "^1.2.6",
    "tslib": "^2.4.0"
  }
}
