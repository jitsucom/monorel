{
  "name": "monorel",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "pnpm code-style:check && tsc -p .",
    "code-style:check": "prettier --check --config ./.prettierrc.json --ignore-path ./.prettierignore .",
    "code-style:fix": "prettier --write --config ./.prettierrc.json --ignore-path ./.prettierignore .",
    "monorel": "./bin/monorel",
    "release:publish": "pnpm monorel --tag latest",
    "canary:publish": "pnpm monorel --version '0.3.0-alpha.{rev}' --tag canary --publish",
    "ci": "pnpm clean && pnpm build && pnpm canary:publish",
    "prepare": "husky install",
    "precommit": "pnpm code-style:check"
  },
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "monorel": "./bin/monorel"
  },
  "keywpords": [
    "monorepo",
    "publish",
    "release"
  ],
  "author": "Vladimir Klimontovich <vladimir@jitsu.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.0.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "husky": "^8.0.0"
  },
  "dependencies": {
    "minimist": "^1.2.6",
    "tslib": "^2.4.0"
  }
}
